<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_product_image_detail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/placeholder_image"
    android:contentDescription="Product Image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Tên sản phẩm rất là dài không thể nào hiển thị hết được trên một dòng" />

        <TextView
            android:id="@+id/tv_product_quantity_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="SL: x2" />

        <TextView
            android:id="@+id/tv_product_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textSize="14sp"
            tools:text="150.000 ₫" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_evaluate_this_product"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Đánh giá"
    android:textSize="12sp"
    android:minHeight="36dp"
    android:layout_marginStart="8dp"
    android:visibility="gone"
    tools:visibility="visible"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/> <!-- Hoặc style bạn muốn -->

</LinearLayout>
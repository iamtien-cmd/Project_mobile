<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC">

    <!-- Scrollable Content Area (Profile) -->
    <ScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavContainer"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background Image -->
            <ImageView
                android:id="@+id/headerImageView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_38"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarProfile"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:navigationIcon="@drawable/ic_back"
                app:title=""
                app:layout_constraintTop_toTopOf="@id/headerImageView"
                app:layout_constraintStart_toStartOf="@id/headerImageView"
                app:layout_constraintEnd_toEndOf="@id/headerImageView"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:elevation="4dp"/>

            <!-- Profile Content Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/profileCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="@id/headerImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Your Profile + Avatar (Nằm ngang) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/titleProfile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hồ sơ cá nhân"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="serif" />

                        <ImageView
                            android:id="@+id/avatarImageView"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:src="@drawable/icon_avatar"
                            android:elevation="8dp"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <!-- Các thông tin Fullname, Email, Phone, Address (TextView) -->
                    <TextView
                        android:id="@+id/fullNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="25dp"
                        android:drawableStart="@drawable/user_2"
                        android:drawablePadding="12dp"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical"
                        android:paddingEnd="20dp"
                        android:text="Fullname"
                        android:textColor="#E0E0E0" />

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/email"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Email"
                        android:textColor="#E0E0E0" />

                    <TextView
                        android:id="@+id/phoneTextView"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/ic_phone"
                        android:gravity="center_vertical"
                        android:drawablePadding="12dp"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Phone"
                        android:textColor="#E0E0E0" />

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/ic_location"
                        android:gravity="center_vertical"
                        android:drawablePadding="12dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Address"
                        android:textColor="#E0E0E0" />

                    <!-- Các Button chức năng -->
                    <Button
                        android:id="@+id/editProfileButton"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="30dp"
                        android:drawableStart="@drawable/edit"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:backgroundTint="#2C2C2C"
                        android:text="Chỉnh sửa thông tin cá nhân"
                        android:textColor="#E0E0E0" />

                    <Button
                        android:id="@+id/orderHistoryButton"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/seen_history"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:backgroundTint="#2C2C2C"
                        android:text="Theo dõi trạng thái đơn hàng"
                        android:textColor="#E0E0E0" />

                    <Button
                        android:id="@+id/shippingAddressButton"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/location"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:backgroundTint="#2C2C2C"
                        android:text="Địa chỉ vận chuyển"
                        android:textColor="#E0E0E0" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar (Fixed at the bottom) -->
    <!-- Đặt ID cho LinearLayout này để ScrollView có thể tham chiếu -->
    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/ivMenuBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="Menu"
            android:src="@drawable/home_1" />

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="Location"
            android:src="@drawable/map" />

        <ImageView
            android:id="@+id/ivaboutus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="Search"
            android:src="@drawable/edit_1" />

        <ImageView
            android:id="@+id/ivcart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="User"
            android:src="@drawable/cart_1"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</RelativeLayout>